{
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true
  },
  "include": ["index.d.ts", "./**/*.ts"],
  "exclude": ["node_modules", "./**/*.js"]
}
